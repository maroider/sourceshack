{% extends "base" %}
{% block title %} {{ owner }}/{{ name }} {% endblock title %}
{% block head %}
  {{ super() }}
  <link rel="stylesheet" href="/repository.css">
{% endblock head %}
{%block body%}
  <h1>{{ owner }}/{{ name }}</h1>
  <table class="files">
    <tbody>
      {% for entry in tree | sort(attribute="is_not_dir") %}
          <td class="icon">
            {%- if entry.kind == 1 -%}
              📄
            {%- elif entry.kind == 2 -%}
              📁
            {%- else -%}
              ⁉
            {%- endif -%}
          </td>
          <td class="name">{{ entry.name }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{%endblock body%}
